generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Enrollment {
  id        String   @id @default(uuid())
  userId    String   // ID do usu√°rio (do auth-service)
  courseId  String   // ID do curso (do courses-service)
  enrolledAt DateTime @default(now())
  @@unique([userId, courseId])
}
